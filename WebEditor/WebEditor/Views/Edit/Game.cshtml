@using WebEditor.Models
@model Editor
           
@section scripts {
    <script src="@Url.Content("~/Scripts/GameEdit.js")" type="text/javascript"></script>
}

<script type="text/javascript">
    $(function () {
        $('body').layout({ applyDefaultStyles: true });
        $.get('@Url.Action("Load", new { id = Model.GameId })', function (data) {
            $("#gameTree").jstree({
                plugins: ["themes", "ui", "json_data"],
                json_data: data,
                animation: 0,
                themes: {
                    theme: "default",
                    icons: false
                }
            }).bind("select_node.jstree", function (event, data) {
                $.get('@Url.Action("EditElement", new { id = Model.GameId, key = "KEY" })'.replace("KEY", data.rslt.obj.attr("data-key")), function (data) {
                    $("#elementEditor").html(data);
                });
            }).delegate("a", "click", function (event, data) { event.preventDefault(); });
        });
    });
</script>

<div class="ui-layout-north">
    <input type="button" value="Add room" />
    <input type="button" value="Add object" />
</div>

<div class="ui-layout-west">
    <div id="gameTree">
        <div id="treeContent">
        Loading...
        </div>
    </div>
</div>

<div class="ui-layout-center">
    <div id="elementEditor"></div>
</div>
