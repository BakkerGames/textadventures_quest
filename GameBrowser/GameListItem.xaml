<UserControl x:Class="GameListItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="300">
    <Grid TextOptions.TextFormattingMode="Display">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Column="0" Padding="3" Margin="3">
            <Run Name="title" FontWeight="Bold">Game name</Run> <Run Name="authorLabel">by ...</Run><LineBreak/>
            <Run Name="info">Info</Run>
        </TextBlock>
        <Button Name="cmdLaunch" Grid.Column="1" Padding="3" Margin="3" VerticalAlignment="Center">Play</Button>
    </Grid>
</UserControl>
