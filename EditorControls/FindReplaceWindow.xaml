<Window x:Class="AxeSoftware.Quest.EditorControls.FindReplaceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Find" Height="109" Width="300" MaxHeight="109" MinHeight="109" MinWidth="200" ShowInTaskbar="False" TextOptions.TextFormattingMode="Display" WindowStartupLocation="CenterOwner" Icon="/EditorControls;component/Images/FindHS.png">
    <Grid Margin="0,5,5,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Margin="5,0,3,0">Find:</Label>
        <TextBox Name="txtFind" Grid.Column="1"/>
        <StackPanel Grid.ColumnSpan="2" HorizontalAlignment="Right" Grid.Row="1" Orientation="Horizontal">
            <Button Margin="3,9,3,6" Padding="3">Find Next</Button>
            <Button Margin="3,9,0,6" Padding="3">Close</Button>
        </StackPanel>
    </Grid>
</Window>
