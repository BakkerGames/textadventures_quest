<library>
  <function name="RunTurnScripts">
    foreach (turnscript, AllTurnScripts()) {
      if (turnscript.enabled) {
        inscope = false
        if (turnscript.parent = game or turnscript.parent = null) {
          inscope = true
        } else {
          if (Contains(turnscript.parent, player)) {
            inscope = true
          }
        }
        if (inscope) {
          invoke (turnscript.script)
        }
      }
    }
  </function>
</library>