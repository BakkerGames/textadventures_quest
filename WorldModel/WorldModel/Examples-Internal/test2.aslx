<asl version="500">
  <include ref="English.aslx"/>
  <include ref="Core.aslx"/>
  
  <game name="Container Test">
  </game>

  <object name="lounge">
    <command command="test">
      for (j, 1, 10) {
        for (i, 10, 99) {
          request (Background, "#0000" + i)
          msg (j + " " + i)
        }
      }
    </command>

    <command command="f">
      <![CDATA[
      msg ("<b>Hello!</b> How \"nice\" to see you.")
      ]]>
    </command>

    <command command="die">
      finish
    </command>

    <command command="big">
      request (FontSize, "14")
    </command>

    <command command="small">
      request (FontSize, "9")
    </command>

    <command command="red">
      request (Foreground, "red")
      request (LinkForeground, "pink")
    </command>

    <command command="black">
      request (Foreground, "black")
      request (LinkForeground, "blue")
    </command>

    <object name="player">
      <inherit name="defaultplayer"/>
    </object>

    <object name="table">
      <inherit name="surface"/>
      <look>Just a table.</look>

      <object name="lamp">
        <take/>
      </object>
      
    </object>

    <object name="apple">
      <take/>
    </object>

    <object name="lady">
      <inherit name="female"/>
    </object>

    <object name="box">
      <inherit name="container"/>
      <look>Just a box.</look>
    </object>

    <object name="purse">
      <inherit name="container_closed"/>

      <object name="coin">
        <take/>
        <look>A pound coin.</look>
      </object>
    </object>

    <object name="cube">
      <take/>
      <inherit name="container_closed"/>
      <transparent/>

      <object name="sphere">
        <look>It's a sphere.</look>
        <take>You shouldn't be able to take this...</take>
      </object>
    </object>

    <object name="man1">
      <inherit name="male"/>
      <alias>Mr. Smith</alias>
      <look>Just some bloke.</look>
      <prefix type="string"></prefix>
    </object>

    <object name="bag">
      <inherit name="container_limited"/>
      <maxobjects type="int">2</maxobjects>
    </object>

  </object>

</asl>